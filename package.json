{
  "name": "expo-app",
  "main": "index.js",
  "version": "1.0.0",
  "scripts": {
    "start": "bunx rork start -p soctirwr8msqz5pdqu0j2 --tunnel",
    "start-web": "bunx rork start -p soctirwr8msqz5pdqu0j2 --web --tunnel",
    "start-web-dev": "DEBUG=expo* bunx rork start -p soctirwr8msqz5pdqu0j2 --web --tunnel",
    "lint": "expo lint",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "test": "jest",
    "test:flashcard": "jest __tests__/FlashcardComponent.test.tsx",
    "test:signup": "jest __tests__/SignUpScreen.test.tsx",
    "test:login": "jest __tests__/LoginScreen.test.tsx",
    "test:store": "jest __tests__/FlashcardStore.test.tsx",
    "test:notifs": "jest __tests__/notifications.test.tsx",
    "test:offline": "jest __tests__/OfflineStorage.test.tsx",
    "test:studyscreen": "jest __tests__/StudyScreen.test.tsx",
    "test:achievementsscreen": "jest __tests__/AchievementsScreen.test.tsx",
    "test:settingsscreen": "jest __tests__/SettingsScreen.test.tsx",
    "test:study-flow": "jest tests/integration/study-screen.test.tsx",
    "test:auth-flow": "jest tests/integration/auth.test.tsx",
    "test:auth-e2e": "detox test --configuration ios.sim.debug",
    "detox:build:ios": "detox build --configuration ios.sim.debug",
    "detox:test:ios": "detox test --configuration ios.sim.debug",
    "detox:build:android": "detox build --configuration android.emu.debug",
    "detox:test:android": "detox test --configuration android.emu.debug",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg)"
    ]
  },
  "detox": {
    "testRunner": "jest",
    "runnerConfig": "e2e/config.json",
    "apps": {
      "ios.app": {
        "type": "ios.app",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/ExpoApp.app",
        "build": "xcodebuild -workspace ios/ExpoApp.xcworkspace -scheme ExpoApp -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build"
      },
      "android.app": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd .."
      }
    },
    "devices": {
      "simulator": {
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 14"
        }
      },
      "emulator": {
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_6_API_33"
        }
      }
    },
    "configurations": {
      "ios.sim.debug": {
        "device": "simulator",
        "app": "ios.app"
      },
      "android.emu.debug": {
        "device": "emulator",
        "app": "android.app"
      }
    }
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@nkzw/create-context-hook": "^1.1.0",
    "@notifee/react-native": "^9.1.8",
    "@rbl93/react-native-flip-card": "^3.5.6",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-firebase/analytics": "^23.5.0",
    "@react-native-firebase/app": "^23.4.1",
    "@react-native-firebase/auth": "^23.4.1",
    "@react-native-firebase/crashlytics": "^23.5.0",
    "@react-native-firebase/firestore": "^23.4.1",
    "@react-native-firebase/messaging": "^23.4.1",
    "@react-native-firebase/perf": "^23.5.0",
    "@react-native-masked-view/masked-view": "^0.3.2",
    "@react-navigation/bottom-tabs": "^7.4.7",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.26",
    "@stardazed/streams-text-encoding": "^1.0.2",
    "@tanstack/react-query": "^5.83.0",
    "@ungap/structured-clone": "^1.3.0",
    "expo": "^53.0.23",
    "expo-blur": "~14.1.4",
    "expo-build-properties": "~0.14.8",
    "expo-constants": "~17.1.4",
    "expo-font": "~13.3.0",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-image-picker": "~16.1.4",
    "expo-linear-gradient": "^15.0.7",
    "expo-linking": "~7.1.4",
    "expo-location": "~18.1.4",
    "expo-secure-store": "~14.2.4",
    "expo-splash-screen": "~0.30.7",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.4",
    "expo-system-ui": "~5.0.6",
    "expo-web-browser": "^14.2.0",
    "firebase-admin": "^13.5.0",
    "lucide-react-native": "^0.544.0",
    "nativewind": "^4.1.23",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-confetti-cannon": "^1.5.2",
    "react-native-flip-card": "^3.5.7",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-tts": "^4.1.1",
    "react-native-web": "0.20.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@expo/ngrok": "^4.1.0",
    "@react-native-community/cli": "^20.0.2",
    "@testing-library/react-native": "^13.3.3",
    "@types/detox": "^17.14.3",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "@types/react-test-renderer": "^19.1.0",
    "detox": "^20.46.0",
    "eslint": "^9.31.0",
    "eslint-config-expo": "^9.2.0",
    "husky": "^9.1.7",
    "jest": "~29.7.0",
    "jest-expo": "~53.0.10",
    "lint-staged": "^16.2.7",
    "metro": "^0.82.5",
    "metro-config": "^0.82.5",
    "metro-core": "^0.82.5",
    "metro-resolver": "^0.82.5",
    "metro-runtime": "^0.82.5",
    "prettier": "^3.7.4",
    "react-test-renderer": "^19.0.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
